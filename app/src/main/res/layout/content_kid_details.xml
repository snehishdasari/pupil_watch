<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.pupil_watch.kidDetails"
    tools:showIn="@layout/app_bar_kid_details"
    android:layout_margin="12dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="gotoGrid">

    <ImageView
        android:id="@+id/student_profile_pic"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:src="@android:drawable/spinner_dropdown_background"
        android:padding="6dp"
        />

    <TextView
        android:id="@+id/std_name"
        android:layout_toRightOf="@id/student_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:padding="8dp"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/std_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/student_profile_pic"
        android:layout_below="@id/std_name"
        android:text="Class - Section"
        android:textSize="16dp"
        android:paddingLeft="8dp"
        />
</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_kid_details_drawer"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
